<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.virginia.cs.httpscs4720.barmate.lookup_results">

    <ListView
        android:id="@+id/list_results"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/gpsLocationLatitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GPS Latitude"
        android:id="@+id/gpsLocationLatitude"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/gpsLocationLongitude"
        android:layout_alignStart="@+id/gpsLocationLongitude" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GPS Longitude"
        android:id="@+id/gpsLocationLongitude"
        android:layout_below="@+id/gpsLocationLatitude"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
